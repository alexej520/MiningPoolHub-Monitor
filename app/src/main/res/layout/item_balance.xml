<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="ru.lextop.miningpoolhub.ui.balance.BalanceItemViewModel" alias="VM"/>

        <variable
            name="currency"
            type="ru.lextop.miningpoolhub.vo.Currency"/>

        <variable
            name="balance"
            type="ru.lextop.miningpoolhub.vo.Balance" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/balance_coin_image"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            bind:imgUrl="@{`file:///android_asset/currency/` + currency.symbol.toLowerCase() + `.png`}" />

        <TextView
            android:id="@+id/balance_coin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@{currency.symbol}"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            app:layout_constraintBottom_toBottomOf="@+id/balance_coin_image"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toEndOf="@+id/balance_coin_image"
            tools:text="BTC" />

        <TextView
            android:id="@+id/balance_normal_confirmed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@{VM.formatBalance(balance.confirmed)}"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintBottom_toTopOf="@+id/balance_normal_unconfirmed"
            app:layout_constraintEnd_toEndOf="@+id/balance_normal_title"
            app:layout_constraintStart_toStartOf="@+id/balance_normal_title"
            app:layout_constraintTop_toBottomOf="@+id/balance_normal_title"
            tools:text="0.000034" />

        <TextView
            android:id="@+id/balance_normal_unconfirmed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@{VM.formatBalance(balance.unconfirmed)}"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/balance_normal_confirmed"
            app:layout_constraintStart_toStartOf="@+id/balance_normal_confirmed"
            app:layout_constraintTop_toBottomOf="@+id/balance_normal_confirmed"
            tools:text="0.0000087" />

        <TextView
            android:id="@+id/balance_autoexchange_confirmed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@{VM.formatBalance(balance.autoExchangeConfirmed)}"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintBaseline_toBaselineOf="@+id/balance_normal_confirmed"
            app:layout_constraintEnd_toEndOf="@+id/balance_normal_autoexchange_title"
            app:layout_constraintStart_toStartOf="@+id/balance_normal_autoexchange_title"
            tools:text="0.000234" />

        <TextView
            android:id="@+id/balance_autoexchange_unconfirmed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@{VM.formatBalance(balance.autoExchangeUnconfirmed)}"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintBaseline_toBaselineOf="@+id/balance_normal_unconfirmed"
            app:layout_constraintEnd_toEndOf="@+id/balance_autoexchange_confirmed"
            app:layout_constraintStart_toStartOf="@+id/balance_autoexchange_confirmed"
            tools:text="0.00039247" />

        <TextView
            android:id="@+id/balance_onexchange"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@{VM.formatBalance(balance.onExchange)}"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintBaseline_toBaselineOf="@+id/balance_autoexchange_confirmed"
            app:layout_constraintEnd_toEndOf="@+id/balance_normal_onexchange_title"
            app:layout_constraintStart_toStartOf="@+id/balance_normal_onexchange_title"
            tools:text="0.000324" />

        <TextView
            android:id="@+id/balance_total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@{VM.formatBalance(balance.total)}"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            app:layout_constraintBottom_toBottomOf="@+id/balance_coin_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@+id/balance_coin_image"
            tools:text="0.00137898" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.33" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.67" />

        <TextView
            android:id="@+id/balance_normal_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@string/balance_normal_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            app:layout_constraintBottom_toTopOf="@+id/balance_normal_confirmed"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="@+id/balance_coin_image"
            app:layout_constraintTop_toBottomOf="@+id/balance_coin_image" />

        <TextView
            android:id="@+id/balance_normal_autoexchange_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@string/balance_autoexchange_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            app:layout_constraintBaseline_toBaselineOf="@+id/balance_normal_title"
            app:layout_constraintEnd_toStartOf="@+id/guideline2"
            app:layout_constraintStart_toStartOf="@+id/guideline" />

        <TextView
            android:id="@+id/balance_normal_onexchange_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@string/balance_onexchange_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            app:layout_constraintBaseline_toBaselineOf="@+id/balance_normal_autoexchange_title"
            app:layout_constraintEnd_toEndOf="@+id/balance_total"
            app:layout_constraintStart_toStartOf="@+id/guideline2" />

        <TextView
            android:id="@+id/balance_currency_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@{currency.name ?? balance.coin}"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toEndOf="@+id/balance_coin_image"
            app:layout_constraintTop_toTopOf="@+id/balance_coin_image"
            tools:text="Bitcoin" />
    </android.support.constraint.ConstraintLayout>
</layout>
